PORT=3000
SHOPIFY_API_KEY=your_api_key
SHOPIFY_API_SECRET=your_api_secret
# Google Generative / Gemini API key
# Set this to your Gemini (Google Generative) API key. Example: AI platform key or service account key depending on setup.
GEMINI_API_KEY=
# Optional: key to encrypt saved Shopify tokens (base64 or hex). If not set, tokens are saved plaintext (not recommended).
TOKEN_ENCRYPTION_KEY=
# Auto-crawl options
AUTO_CRAWL_ON_INSTALL=false
CRAWL_MAX_PAGES=100
CRAWL_MAX_DEPTH=4
CRAWL_CONCURRENCY=5
CRAWL_INTERVAL_HOURS=168
